# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
# Stage 1: Build the MCP server from TypeScript sources
FROM node:lts-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package and config files
COPY package.json package-lock.json tsconfig.json ./

# Copy source code
COPY src ./src

# Install all dependencies including dev and build
RUN npm ci && npm run build

# Stage 2: Create a lean runtime image
FROM node:lts-alpine

WORKDIR /app

# Copy built artifacts
COPY --from=builder /app/dist ./dist

# Copy package files to install dependencies
COPY package.json package-lock.json ./

# Install only production dependencies without running prepare scripts
RUN npm ci --omit=dev --ignore-scripts

# Default command to start the MCP server
CMD ["node", "dist/index.js"]
